<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "ChynIdol 2012", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Users", users_path %></li>
          <li><%= link_to "Hall of Fame", controller: "users", action: "hall_of_fame" %></li>
          <% if signed_in? %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Start Season <b class="caret"></b>
              </a>
            
              <ul class="dropdown-menu">
                <li><%= link_to "Votes", microposts_path %></li>
                <li><%= link_to "Results", controller: "microposts", action: "results" %></li>
                <li><%= link_to "Guess who?", controller: "microposts", action: "guess_who" %></li>
                <li id="fat-menu" class="dropdown">
              </ul>
            </li>
            <li id="fat-menu" class="dropdown"> 
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings",  edit_user_path(current_user)  %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
          <li><%= link_to "Help", help_path %></li>
        </ul>
      </nav>
    </div>
  </div>
</header>